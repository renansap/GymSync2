# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/gymsync

# Security
SESSION_SECRET=your-secret-key-here-must-be-at-least-32-characters-long
JWT_SECRET=your-jwt-secret-here-must-be-at-least-32-characters

# API Keys
SENDGRID_API_KEY=SG.your-sendgrid-api-key
OPENAI_API_KEY=sk-your-openai-api-key

# Replit Auth (optional)
REPLIT_DOMAINS=
REPL_ID=
ISSUER_URL=https://replit.com/oidc

# Application
PORT=5000
NODE_ENV=development

# Redis (for session storage and cache)
REDIS_URL=redis://localhost:6379

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5000

# Email Configuration
EMAIL_FROM=noreply@gymsync.com
EMAIL_FROM_NAME=GymSync

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Password Reset
PASSWORD_RESET_TOKEN_EXPIRES_IN=1h